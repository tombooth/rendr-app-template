doctype 5
html(lang="en")
   head
      meta(charset="utf-8")
      title Rendr Example App
      
      link(href=base + "styles.css", media="screen", rel="stylesheet", type="text/css")

   body

      div.navbar.navbar-inverse.navbar-fixed-top
         div.navbar-inner
            div.container
               a.brand(href="/") GitHub Browser
               div.nav-collapse.collapse
                  ul.nav
                     li.active: a(href="/") Home
                     li.active: a(href="/repos") Repos
                     li.active: a(href="/users") Users
               div.loading-indicator Loading&hellip;

      section#content.container
         if template
            {{{body}}}

      script(src=base + "mergedAssets.js")
      if template
         script.
            (function() {
               var App = window.App = new (require('app/app'))({{json appData}});
               App.bootstrapData({{json bootstrappedData}});
               App.start();
            })();
      else
         script(src=base + "boot.js", id="boot", data-urlbase=urlBase)

